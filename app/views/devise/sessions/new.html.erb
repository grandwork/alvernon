<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= render :partial => 'shared/flash_messages' %>
  <fieldset>
    <legend>Login</legend>

    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix"><i class="fa fa-envelope-o fa-fw"></i></span>
      </div>
      <div class="small-9 large-10 columns">
        <%= f.email_field :email, placeholder: "Email address" %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix"><i class="fa fa-key fa-fw"></i></span>
      </div>
      <div class="small-9 large-10 columns">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <label class="checkbox">
          <%= f.check_box :remember_me %>
          Remember me on this computer
        </label>
      </div>
    </div>
  
  <%= f.submit "Sign-in", :class => "button small success radius" %>

  <%= render :partial => "devise/shared/links" %>
  <%= link_to "Canyon State Inspection Home", "htp://csindi.com", :class => "button tiny secondary radius" %>
  
</fieldset>
<% end %>

