<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <%= render :partial => 'shared/flash_messages' %>
<fieldset>
    <legend>Resend Unlock Instructions</legend>

    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix"><i class="fa fa-envelope-o fa-fw"></i></span>
      </div>
      <div class="small-9 large-10 columns">
        <%= f.email_field :email, :placeholder => "Enter your email and we'll send unlock instructions" %>
      </div>
    </div>
		
		<div class="row">
      <div class="large-12 columns">
  			<%= f.submit "Resend unlock instructions", :class => "button small success radius" %>      
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
  			<%= render :partial => "devise/shared/links" %>
      </div>
    </div>

  
  
<% end %>

