<%= paginate @employees %>
<div class="main_content">
  <table>
    <thead>
      <tr>
        <th>Name & Email</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |u| %>
        <tr>
          <td><%= u.full_name %> (<%= mail_to u.email %>)</td>
          <td><%= distance_of_time_in_words_to_now(u.created_at) %> ago</td>
          <% if current_user.super_admin? %>
            <td><%= link_to "Restore Access", "/admin/users/restore/#{u.id}", :method => :post, class: "button success tiny radius" %>
          <% end -%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @employees %>